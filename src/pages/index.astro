---
import MainLayout from '../layouts/MainLayout.astro';
import PlaceCard from '../components/PlaceCard.astro';

const places = [
  {
    name: "Paris",
    description: "Paris is the capital of France, known for its iconic landmarks such as the Eiffel Tower, Notre-Dame Cathedral, and world-class museums like the Louvre.",
    bestAttractions: ["Eiffel Tower", "Louvre Museum", "Notre-Dame Cathedral"],
    image: "/images/paris.jpg",
    flag: "/images/france_flag.jpg" 
  },
  {
    name: "Tokyo",
    description: "Tokyo is Japan's bustling capital, blending traditional shrines and temples with modern skyscrapers, shopping districts, and entertainment hubs.",
    bestAttractions: ["Shibuya Crossing", "Tokyo Tower", "Sens≈ç-ji Temple"],
    image: "/images/tokyo.jpg",
    flag: "/images/japan_flag.png" 
  },
  {
    name: "Switzerland",
    description: "Switzerland is a landlocked country in Central Europe, known for its natural beauty, history, and culture.",
    bestAttractions: ["Matterhorn", "JungFraujoch", "Grindelwald"],
    image: "/images/switzerland.jpg",
    flag: "/images/switzerland_flag.png"  
  },
  {
    name: "Dubai",
    description: "Dubai is a city in the United Arab Emirates that's a global trading hub, a financial center, and a popular tourist destination. It's known for its skyscrapers, beaches, and ports.",
    bestAttractions: ["Burj Khalifa", "Museum of the Future", "Jumeriah Mosque"],
    image: "/images/dubai.webp",
    flag: "/images/uae_flag.png"  
  },
  {
    name: "Italy",
    description: "Italy is a boot-shaped country in Southern Europe, known for its rich history, art, culture, and cuisine, featuring a peninsula jutting into the Mediterranean Sea.",
    bestAttractions: ["Colosseum", "Pantheon", "St. Peters Basilica"],
    image: "/images/italy.jpeg",
    flag: "/images/italy_flag.png"  
  }
];
---

<MainLayout>
  <div id="places-container">
    {places.map((place) => (
      <PlaceCard
        name={place.name}
        description={place.description}
        bestAttractions={place.bestAttractions}
        image={place.image}
        flag={place.flag}  
      />
    ))}
  </div>
</MainLayout>